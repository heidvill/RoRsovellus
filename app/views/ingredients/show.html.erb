<h2><%= @ingredient.name %></h2>

<ul>
  <% @ingredient.recipes.each do |recipe| %>
      <li><%= link_to recipe.name, recipe %></li>
  <% end %>
</ul>

<% if current_user %>
    <%= link_to 'Edit', edit_ingredient_path(@ingredient), class: "btn btn-primary" %>
    <%= link_to 'Destroy', @ingredient, method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger' %>
<% end %>