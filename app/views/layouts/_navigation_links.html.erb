<%# add navigation links to this file %>
<li><%= link_to 'recipes', recipes_path %></li>
<li><%= link_to 'categories', categories_path %></li>
<li><%= link_to 'ingredients', ingredients_path %></li>
<li><%= link_to 'users', users_path %></li>

<% if current_user %>
    <li role="presentation" class="dropdown">
      <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
        New... <span class="caret"></span>
      </a>
      <ul class="dropdown-menu">
        <li><%= link_to 'recipe', new_recipe_path %></li>
        <li><%= link_to 'category', new_category_path %></li>
      </ul>
    </li>
    <li role="presentation" class="dropdown">
      <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
        <%= current_user.username%> <span class="caret"></span>
      </a>
      <ul class="dropdown-menu">
        <li><%= link_to 'my page', current_user %></li>
        <li><%= link_to 'change password', edit_user_path(current_user.id) %></li>
        <li><%= link_to 'signout', signout_path, method: :delete %></li>
      </ul>
    </li>
<% else %>
    <li><%= link_to 'signin', signin_path %></li>
    <li><%= link_to 'signup', signup_path %></li>
<% end %>


