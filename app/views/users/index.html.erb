<h1>Users</h1>

<table class="table table-hover">
  <thead>
  <tr>
    <th>User</th>
    <th># Recipes</th>
    <th>Last recipe added</th>
  </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.username, user %></td>
        <td><span class="badge"><%= user.recipes.length %></span></td>
        <td><%= user.last_recipe_time %></td>
      </tr>
  <% end %>
  </tbody>
</table>
